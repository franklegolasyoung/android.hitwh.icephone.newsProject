<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.superproject.MyImageView
        android:id="@+id/news_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/news_name"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/news_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_name"
        android:textSize="12dp"
        android:maxWidth="270dp"
        android:maxLines="1"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/news_from"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_context"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="120dp" />

    <TextView
        android:id="@+id/news_time"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#B45BDA"
        android:layout_below="@id/news_context"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="270dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>